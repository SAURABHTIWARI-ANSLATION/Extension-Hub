{
  "manifest_version": 3,
  "name": "DM Manager Pro",
  "version": "1.0.0",
  "description": "Templates and auto-responses for business social media accounts",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "contextMenus"
  ],
  "host_permissions": [
    "*://*.linkedin.com/*",
    "*://*.twitter.com/*",
    "*://*.instagram.com/*",
    "*://*.facebook.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options/options.html",
  "content_scripts": [
    {
      "matches": [
        "*://*.linkedin.com/*",
        "*://*.twitter.com/*",
        "*://*.instagram.com/*",
        "*://*.facebook.com/*"
      ],
      "js": ["content.js"],
      "css": ["assets/styles.css"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}