{
  "manifest_version": 3,
  "name": "URL Safety Preview",
  "version": "1.2.0",
  "description": "Show safety scores before visiting shortened or suspicious links",
  "permissions": [
    "activeTab",
    "storage",
    "webNavigation",
    "notifications"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "css": ["theme.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "URL Safety Preview"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_page": "settings.html",
  "web_accessible_resources": [
    {
      "resources": ["icons/*", "assets/*", "theme.css"],
      "matches": ["<all_urls>"]
    }
  ]
}