{
  "manifest_version": 3,
  "name": "Privacy First Todo Tab",
  "short_name": "Todo Tab",
  "version": "1.0",
  "description": "A privacy-first todo list with color-coded labels. Your data stays on your device.",
  
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  
  "permissions": ["storage"],
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "minimum_chrome_version": "88"
}