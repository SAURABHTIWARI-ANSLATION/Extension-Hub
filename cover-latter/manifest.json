{
  "manifest_version": 3,
  "name": "Cover Letter Generator (Form Based)",
  "description": "Fill details and instantly generate a professional cover letter.",
  "version": "1.0",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "permissions": ["storage"]
}
