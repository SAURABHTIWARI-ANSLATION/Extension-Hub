{
    "manifest_version": 3,
    "name": "Pixel Perfect Color Picker",
    "version": "1.0.0",
    "description": "Pick exact colors from any pixel on the screen. Get HEX, RGB, and HSL values instantly.",
    "permissions": [
        "storage"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Pick Color",
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}