{
  "manifest_version": 3,
  "name": "Simple Music Player",
  "short_name": "Music Player",
  "version": "1.0",
  "description": "A simple music player for local audio files",
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Music Player",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "permissions": ["storage"],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "minimum_chrome_version": "88"
}