{
  "manifest_version": 3,
  "name": "Floating Analog Watch",
  "short_name": "Analog Watch",
  "version": "1.0",
  "description": "Displays a draggable floating analog watch with Roman numerals on every webpage.",

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"],
      "run_at": "document_idle"
    }
  ],

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "minimum_chrome_version": "114"
}