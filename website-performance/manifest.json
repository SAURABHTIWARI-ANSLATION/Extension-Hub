{
  "manifest_version": 3,
  "name": "Website Performance Estimator",
  "short_name": "Perf Estimator",
  "version": "1.0",
  "description": "Quickly estimate website performance metrics for the current page.",

  "permissions": [
    "activeTab",
    "scripting"
  ],

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "minimum_chrome_version": "114"
}
