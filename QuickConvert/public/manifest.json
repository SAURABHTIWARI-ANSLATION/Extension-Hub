{
  "manifest_version": 3,
  "name": "QuickConvert - Image PDF Tools",
  "version": "1.0.0",
  "description": "Fast offline converter for images (JPG, PNG, HEIC, WebP) and PDFs. Crop, resize, compress, convert, OCR, and more - all in one tool!",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_title": "QuickConvert - Image PDF Tools"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": []
}