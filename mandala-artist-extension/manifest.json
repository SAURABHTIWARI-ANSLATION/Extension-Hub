{
  "manifest_version": 3,
  "name": "Mandala Artist",
  "version": "1.0.0",
  "description": "Create beautiful mandala drawings with symmetry and patterns",
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Mandala Artist",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  
  "permissions": [
    "activeTab",
    "storage"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "options_page": "options.html",
  
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*",
        "content/*",
        "lib/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  }
}