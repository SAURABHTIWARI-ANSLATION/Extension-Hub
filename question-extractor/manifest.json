{
  "manifest_version": 3,
  "name": "Auto Question Extractor",
  "short_name": "Q Extractor",
  "version": "1.0",
  "description": "Automatically extract important questions and answers from selected text or web content.",

  "permissions": [
    "activeTab",
    "scripting"
  ],

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "minimum_chrome_version": "114"
}
