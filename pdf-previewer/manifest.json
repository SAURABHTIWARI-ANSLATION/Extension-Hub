{
  "manifest_version": 3,
  "name": "PDF Previewer",
  "version": "1.0",
  "description": "Preview PDF files instantly using Chrome's built-in PDF viewer.",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
