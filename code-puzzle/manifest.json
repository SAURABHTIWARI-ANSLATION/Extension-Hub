{
  "manifest_version": 3,
  "name": "Code Puzzle Generator",
  "description": "Daily JavaScript & Python mini coding challenges with difficulty levels and streak tracking",
  "version": "2.0",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
