{
  "manifest_version": 3,
  "name": "Fahrenheit_Celsius_Converter",
  "description": "Convert a Fahrenheit temperature to Celsius temperature or vice-versa",
  "version": "1.0.0",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "permissions": ["activeTab"]
}
