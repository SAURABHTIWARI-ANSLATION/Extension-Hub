{
  "manifest_version": 3,
  "name": "Puzzle Pulse Pro",
  "version": "1.0",
  "description": "Advanced puzzle solver with image-based challenges",
  "permissions": ["storage", "alarms"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Puzzle Pulse Pro",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "web_accessible_resources": [{
    "resources": ["assets/puzzle-images/*"],
    "matches": ["<all_urls>"]
  }]
}