{
  "manifest_version": 3,
  "name": "SEO Analyzer Pro",
  "description": "Analyze website SEO instantly",
  "version": "1.0",
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "SEO Analyzer Pro"
  },
  
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}