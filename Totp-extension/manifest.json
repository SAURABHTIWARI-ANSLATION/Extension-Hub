{
  "manifest_version": 3,
  "name": "TOTP Authenticator",
  "version": "1.0.0",
  "description": "Generate TOTP codes for 2-factor authentication",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "permissions": ["storage"],
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/icon16.png", "assets/icon48.png", "assets/icon128.png"],
      "matches": ["<all_urls>"]
    }
  ]
}