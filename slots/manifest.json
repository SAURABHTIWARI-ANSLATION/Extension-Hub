{
  "manifest_version": 3,
  "name": "Free-Slots - Simple Scheduler",
  "version": "1.0",
  "description": "Share your availability instantly in Gmail and LinkedIn without APIs or backend.",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": [
    "https://mail.google.com/*",
    "https://www.linkedin.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*",
        "https://www.linkedin.com/*"
      ],
      "js": ["content.js"]
    }
  ]
}
