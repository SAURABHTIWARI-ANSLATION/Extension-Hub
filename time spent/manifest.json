{
  "manifest_version": 3,
  "name": "Time Spent Tracker",
  "version": "1.0",
  "description": "Track how much time you spend on each website",
  "permissions": ["storage", "tabs", "idle", "alarms"],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icons16.png",
      "32": "icons/icons32.png",
      "48": "icons/icons48.png",
      "128": "icons/icons128.png"
    }
  },

  "icons": {
    "16": "icons/icons16.png",
    "32": "icons/icons32.png",
    "48": "icons/icons48.png",
    "128": "icons/icons128.png"
  }
}
