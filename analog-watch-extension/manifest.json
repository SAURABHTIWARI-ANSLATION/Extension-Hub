{
  "manifest_version": 3,
  "name": "Floating Analog Watch",
  "version": "1.0",
  "description": "Shows a draggable analog watch on every webpage.",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ]
  ,
  "action": {
    "default_popup": "popup.html"
  }
}
