{
  "manifest_version": 3,
  "name": "Text to PDF Generator",
  "short_name": "Text to PDF",
  "version": "1.0",
  "description": "Convert text into a clean, downloadable PDF instantly.",

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "minimum_chrome_version": "114"
}
