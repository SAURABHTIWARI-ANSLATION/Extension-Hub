{
  "manifest_version": 3,
  "name": "Hosting Renewal Alert",
  "description": "Never miss domain or hosting renewals. Smart alerts, badge count & reminders.",
  "version": "1.0.0",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "notifications",
    "alarms"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}