{
  "manifest_version": 3,
  "name": "Daily Goal Tracker",
  "version": "1.0",
  "description": "Track your daily goals and habits",
  "permissions": ["storage", "alarms"],

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
