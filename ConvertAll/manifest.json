{
  "manifest_version": 3,
  "name": "ConvertAll",
  "short_name": "Converter",
  "version": "1.0.1",
  "description": "Instantly convert length, volume, weight, temperature, time, percentages, and numbers in one simple tool.",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Quick Unit Converter"
