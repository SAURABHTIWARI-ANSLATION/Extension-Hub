{
  "manifest_version": 3,
  "name": "Water Alert",
  "short_name": "Water Alert",
  "version": "2.2",
  "description": "Smart hydration reminder that alerts you to drink water at regular intervals.",

  "permissions": [
    "storage",
    "alarms"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "web_accessible_resources": [
    {
      "resources": [
        "alert.html",
        "alert.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],

  "minimum_chrome_version": "114"
}
