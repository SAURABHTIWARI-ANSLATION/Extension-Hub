{
  "manifest_version": 3,
  "name": "Mini Book Store",
  "description": "Browse and read free books directly from your browser.",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Book Store"
  },
  "permissions": ["storage", "tabs"],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
