{
  "manifest_version": 3,
  "name": "QuickShot - Advanced Screen Capture",
  "version": "2.0.0",
  "description": "Capture visible parts, full pages, or selected areas. Edit and share instantly.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "downloads",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "QuickShot"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "content.css"
      ]
    }
  ],
  "commands": {
    "capture_visible": {
      "suggested_key": {
        "default": "Alt+Shift+1",
        "mac": "MacCtrl+Shift+1"
      },
      "description": "Capture Visible Part"
    },
    "capture_selection": {
      "suggested_key": {
        "default": "Alt+Shift+3",
        "mac": "MacCtrl+Shift+3"
      },
      "description": "Capture Selection"
    }
  }
}