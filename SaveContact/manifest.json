{
  "manifest_version": 3,
  "name": "Web to Phone Bridge",
  "short_name": "Phone Bridge",
  "version": "2.1",
  "description": "Save phone numbers and emails from any website with one right-click.",
  "permissions": [
    "storage",
    "contextMenus"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "bg.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Saved Contacts"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "minimum_chrome_version": "109"
}
