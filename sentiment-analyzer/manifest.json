{
  "manifest_version": 3,
  "name": "Sentiment Analyzer",
  "version": "1.0",
  "description": "Analyze tone of any text and export history",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon32.png",
      "128": "icons/icon48.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon32.png",
    "128": "icons/icon48.png"
  }
}
