{
  "manifest_version": 3,
  "name": "Budget Planner Pro",
  "version": "1.0",
  "description": "Track expenses, view reports, export data, set alerts, and visualize spending.",
  "permissions": [
    "storage",
    "alarms",
    "notifications",
    "downloads"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
