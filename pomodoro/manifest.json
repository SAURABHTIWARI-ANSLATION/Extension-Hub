{
  "manifest_version": 3,
  "name": "Pomodoro Timer",
  "description": "A professional Pomodoro timer extension",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "alarms", "notifications"]
}
